@model SweetDream.Models.Account

@{
    ViewData["Title"] = "Register Account";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f6f9;
    }

    .centered-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 15px;
    }

    .register-form {
        background: #fff;
        padding: 40px 45px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 600px;
        box-sizing: border-box;
    }

    h2 {
        margin-bottom: 6px;
        font-weight: 700;
        color: #333;
        text-align: center;
    }

    p.subtitle {
        color: #666;
        font-size: 0.9rem;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-col {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        color: #444;
        font-size: 0.95rem;
    }

    input {
        padding: 10px 12px;
        border: 1.6px solid #ccc;
        border-radius: 10px;
        font-size: 1rem;
        transition: border-color 0.3s;
    }

        input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 6px rgba(0,123,255,0.3);
        }

    .text-danger {
        color: #e53935;
        font-size: 0.85rem;
        margin-top: 6px;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #0056b3;
        }

    .cancel-link {
        display: block;
        text-align: center;
        margin-top: 14px;
        color: #555;
        text-decoration: none;
        font-size: 0.95rem;
    }

        .cancel-link:hover {
            color: #007bff;
        }

    .password-hint {
        font-size: 0.75rem;
        color: #888;
        margin-top: 4px;
        padding-left: 2px;
    }
</style>

<div class="centered-wrapper">
    <form asp-action="Register" method="post" class="register-form" novalidate>
        <h2>Register Account</h2>
        <p class="subtitle">Fill in the details below to create your account.</p>

        @if (ViewData["Message"] != null)
        {
            <div class="text-danger" style="text-align: center; margin-bottom: 12px;">@ViewData["Message"]</div>
        }

        <div class="form-row">
            <div class="form-col">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-col">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="you@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="First name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-col">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" placeholder="Phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-col">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <label asp-for="Address"></label>
                <input asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-col">
                <label asp-for="PasswordHash">Password</label>
                <input asp-for="PasswordHash" type="password" placeholder="Strong password" />
                <div class="password-hint">Min 8 chars, incl. uppercase, number, symbol.</div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-col">
                <label>Confirm Password</label>
                <input type="password" name="ConfirmPassword" placeholder="Repeat password" />
                <span class="text-danger">@ViewData["ConfirmPasswordError"]</span>
            </div>
        </div>

        <input type="hidden" name="roleName" value="CUSTOMER" />

        <button type="submit">Register</button>
        <a asp-action="Login" class="cancel-link">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}