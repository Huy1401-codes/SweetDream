@{
    ViewData["Title"] = "Reset Password";
}

<div class="auth-wrapper    ">
    <div class="auth-container">
        <div class="card p-4 shadow">
            <h1 class="title text-center">Đặt lại mật khẩu</h1>
            <p class="text-muted text-center">Nhập mật khẩu mới của bạn bên dưới. Đảm bảo mật khẩu mạnh và dễ nhớ.</p>
            <hr />

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" name="token" value="@ViewBag.Token" />
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="form-group">
                    <label>Mật khẩu mới</label>
                    <input type="password" name="newPassword" class="form-control" required placeholder="Nhập mật khẩu mạnh..." />
                    <small class="form-text text-muted">Sử dụng ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường, số và ký hiệu.</small>
                </div>

                <div class="form-group">
                    <label>Xác nhận mật khẩu</label>
                    <input type="password" name="confirmPassword" class="form-control" required placeholder="Nhập lại mật khẩu mới của bạn..." />
                    <small class="form-text text-muted">Make sure both passwords match.</small>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success w-100">Đặt lại mật khẩu</button>
                </div>
            </form>

            <p class="text-center mt-3">
                <a asp-action="Login">Quay lại Đăng nhập</a>
            </p>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true">

                        