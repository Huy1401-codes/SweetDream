@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = "ChangePassword";
}

<partial name="_ProfileNavigation" />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">@TempData["Success"]</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger text-center">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="mb-1">@error.ErrorMessage</p>
        }
    </div>
}

<style>
    .primary-color {
        background-color: #B08EAD !important;
        border-color: #B08EAD !important;
        color: white !important;
    }

        .primary-color:hover,
        .primary-color:focus {
            background-color: #9a7ca1 !important;
            border-color: #9a7ca1 !important;
            color: white !important;
        }

    .form-title {
        color: #B08EAD;
        font-weight: 700;
    }

    .form-container {
        border: 1px solid #B08EAD;
        box-shadow: 0 0 10px rgba(176, 142, 173, 0.4);
    }
</style>
<div style="height: 100vh; display: flex; justify-content: center; align-items: flex-start; padding-top: 50px; background: #f9f6fb;">
    <form method="post" class="p-4 bg-white rounded form-container" style="width: 100%; max-width: 400px;" action="/Profiles/ChangePassword">
        <h3 class="mb-4 text-center form-title">Đổi Mật Khẩu</h3>

        <div class="mb-3">
            <label for="currentPassword" class="form-label fw-semibold">Mật khẩu hiện tại</label>
            <input type="password" id="currentPassword" name="currentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" required autocomplete="current-password">
        </div>

        <div class="mb-3">
            <label for="newPassword" class="form-label fw-semibold">Mật khẩu mới</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required autocomplete="new-password">
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label fw-semibold">Xác nhận mật khẩu mới</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" required autocomplete="new-password">
        </div>

        <button type="submit" class="btn primary-color w-100 fw-semibold">Xác nhận đổi mật khẩu</button>

        <input name="__RequestVerificationToken" type="hidden" value="...">
    </form>
</div>

