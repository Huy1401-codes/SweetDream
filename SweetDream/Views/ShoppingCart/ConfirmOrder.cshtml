<!--================Checkout Area =================-->
<section class="checkout_area section_padding">
    <div class="container">
        <div class="billing_details">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Xác nhận đơn hàng của bạn</h1>
                    <form class="row contact_form" asp-action="Checkout" asp-controller="ShoppingCart" method="post" novalidate="novalidate">
                        <div class="col-md-12 form-group mb-3">
                            <label for="ShippingAddress">Địa chỉ giao hàng</label>
                            <input type="text" class="form-control" id="ShippingAddress" name="ShippingAddress" value="@Model.Account.Address" required />
                        </div>
                        <div class="col-md-12 form-group mb-3">
                            <label for="PhoneNumber">Số điện thoại</label>
                            <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.Account.PhoneNumber" required />
                        </div>
                        <div class="col-md-12 form-group mb-3">
                            <label for="CustomerNote">Ghi chú của khách hàng</label>
                            <textarea class="form-control" id="CustomerNote" name="CustomerNote" rows="3" placeholder="Nhập ghi chú của bạn vào đây......">@Model.CustomerNote</textarea>
                        </div>
                        <div class="col-md-12 form-group mb-3">
                            <h3>Đặt hàng sản phẩm</h3>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Select</th>
                                        <th>Sản phẩm</th>
                                        <th>Giá tiền</th>
                                        <th>Số lượng</th>
                                        <th>Tổng tiền</th>
                                    </tr>
                                </thead>
                                @{
                                    var cultureVN = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                                }
                                <tbody>
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="selectedProducts" value="@item.ProductId" checked />
                                            </td>
                                            <td>
                                                <img src="~/img/product/@item.Product.Image" alt="@item.Product.ProductName" class="img-thumbnail" style="width: 80px; height: 80px;" />
                                                <br />
                                                @item.Product.ProductName
                                            </td>
                                            <td>@item.Price.ToString("C", cultureVN)</td>
                                            <td>@item.Quantity</td>
                                            <td>@((item.Quantity * item.Price).ToString("C", cultureVN))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" class="btn_3">Đặt hàng</button>
                            <a href="@Url.Action("Index", "ShoppingCart")" class="btn_3">Trở lại giỏ hàng</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Checkout Area =================-->