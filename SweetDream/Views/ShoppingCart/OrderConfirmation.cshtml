    <!-- QR Code Script -->
    <script>
        document.getElementById("showQrBtn").addEventListener("click", function () {
            var amount = 2100000;
            var bankCode = "mbbank";
            var accountNumber = "140112126868";
            var info = "THANH TOAN DON HANG 123 co ten Sweet Pillow, Dream Blanket";

            var qrUrl = `https://img.vietqr.io/image/${bankCode}-${accountNumber}-compact2.png?amount=${amount}&addInfo=${encodeURIComponent(info)}`;

            document.getElementById("qrImage").src = qrUrl;
            document.getElementById("qrSection").style.display = "block";
        });

        // Simulate success message on page load (replace with actual logic if integrated with backend)
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("successMessage").style.display = "block";
            setTimeout(() => {
                document.getElementById("successMessage").style.display = "none";
            }, 5000);
        });
    </script>
</body>

</html>