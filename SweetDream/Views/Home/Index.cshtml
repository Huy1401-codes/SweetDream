    <script>
        const slider = document.getElementById("testimonialSlider");
        const testimonials = document.querySelectorAll(".testimonial");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");

        let currentIndex = 0;
        let itemsPerView = 1;

        function calculateItemsPerView() {
            const containerWidth = document.querySelector('.testimonial-slider-wrapper').offsetWidth;
            const cardMinWidth = 300;
            itemsPerView = Math.floor(containerWidth / cardMinWidth) || 1;
            testimonials.forEach(item => {
                item.style.width = `${100 / itemsPerView}%`;
            });
        }

        function updateSlider() {
            const offset = -currentIndex * (100 / itemsPerView);
            slider.style.transform = `translateX(${offset}%)`;
        }

        nextBtn.addEventListener("click", () => {
            const maxIndex = testimonials.length - itemsPerView;
            if (currentIndex < maxIndex) {
                currentIndex++;
            } else {
                currentIndex = 0; // Reset về đầu
            }
            updateSlider();
        });

        prevBtn.addEventListener("click", () => {
            if (currentIndex > 0) {
                currentIndex--;
            } else {
                currentIndex = testimonials.length - itemsPerView; // Chạy về cuối
            }
            updateSlider();
        });

        window.addEventListener('resize', () => {
            calculateItemsPerView();
            updateSlider();
        });

        // Auto slide
        setInterval(() => {
            const maxIndex = testimonials.length - itemsPerView;
            if (currentIndex < maxIndex) {
                currentIndex++;
            } else {
                currentIndex = 0;
            }
            updateSlider();
        }, 5000);

        // Initial setup
        calculateItemsPerView();
        updateSlider();
    </script>



    <script>
        // --- Image slider ---
        const sliders = document.querySelectorAll('.intro-slider img');
        let currentSlide = 0;

        function showSlide(index) {
            sliders.forEach((slide, i) => {
                slide.classList.toggle('active', i === index);
            });
        }

        setInterval(() => {
            currentSlide = (currentSlide + 1) % sliders.length;
            showSlide(currentSlide);
        }, 4000);



    </script>

    <script>
        const sloganText = "✨ Giấc ngủ ngon mỗi ngày – Lớn khôn từng giấc !";
        const sloganEl = document.getElementById("animated-slogan");

        function startTypingLoop() {
            sloganEl.textContent = ""; // Xóa nội dung cũ
            let j = 0;

            function typeSlogan() {
                if (j < sloganText.length) {
                    sloganEl.textContent += sloganText.charAt(j);
                    j++;
                    setTimeout(typeSlogan, 50); // tốc độ gõ
                } else {
                    setTimeout(startTypingLoop, 5000); // chờ 5s rồi gõ lại
                }
            }

            typeSlogan(); // Đừng quên gọi hàm gõ!
        }

        startTypingLoop();
    </script>

