<style>
    .banner_part {
        position: relative;
        overflow: hidden; /* Ngăn các phần tử tràn ra ngoài */
    }

    .banner_text {
        z-index: 10; /* Đảm bảo phần chữ nằm trên video */
        position: relative;
    }

    .banner_img {
        z-index: 1; /* Video nằm dưới phần chữ */
    }

        .banner_img video {
            width: 130%; /* Tăng kích thước video để lấp đầy chiều rộng */
            height: auto; /* Giữ tỷ lệ khung hình */
            border: 5px solid #B08EAD; /* Giữ viền khung */
            border-radius: 10px; /* Giữ bo góc khung */
            display: block; /* Đảm bảo video là block */
            margin: 20px auto; /* Căn giữa video, giữ khoảng cách trên/dưới */
            object-fit: cover; /* Đảm bảo video lấp đầy khung */
        }
    
    {
        text-align: center; /* Căn giữa chữ trên mobile */
        padding: 200px; /* Thêm khoảng cách trên mobile */
    }

    .banner_img video {
        max-height: 1500px; /* Tăng chiều cao tối đa trên mobile */
    }

    }

    .single_client_review {
        display: flex;
        flex-direction: column;
        align-items: center; /* căn giữa theo chiều ngang */
        justify-content: center; /* nếu cần căn giữa theo chiều dọc */
        text-align: center;
        height: 100%; /* hoặc chiều cao cụ thể nếu cần */
    }

    .client_img {
        margin-bottom: 20px;
    }

        .client_img img {
            display: block;
            margin: 0 auto;
            max-width: 150px; /* chỉnh tùy theo kích thước ảnh mong muốn */
            height: auto;
            border-radius: 50%; /* hình tròn nếu muốn */
        }

</style>

