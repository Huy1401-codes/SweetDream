@{
    ViewData["Title"] = "Home Page";
}
<style>
    .banner_part {
        position: relative;
        overflow: hidden; /* Ngăn các phần tử tràn ra ngoài */
    }

    .banner_text {
        z-index: 10; /* Đảm bảo phần chữ nằm trên video */
        position: relative;
    }

    .banner_img {
        z-index: 1; /* Video nằm dưới phần chữ */
    }

        .banner_img video {
            width: 130%; /* Tăng kích thước video để lấp đầy chiều rộng */
            height: auto; /* Giữ tỷ lệ khung hình */
            border: 5px solid #B08EAD; /* Giữ viền khung */
            border-radius: 10px; /* Giữ bo góc khung */
            display: block; /* Đảm bảo video là block */
            margin: 20px auto; /* Căn giữa video, giữ khoảng cách trên/dưới */
            object-fit: cover; /* Đảm bảo video lấp đầy khung */
        }
    
    {
        text-align: center; /* Căn giữa chữ trên mobile */
        padding: 200px; /* Thêm khoảng cách trên mobile */
    }

    .banner_img video {
        max-height: 1500px; /* Tăng chiều cao tối đa trên mobile */
    }

    #client-review {
        padding: 15px 0;
        background-color: #f9f9f9;
        text-align: center;
    }

        #client-review img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            margin: 0 auto 20px;
            display: block;
        }

        #client-review p {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

        #client-review h5 {
            color: #333;
            font-weight: bold;
        }

    .client-review-slider > div {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 20px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    /* Dot navigation */
    .slick-dots {
        display: flex !important;
        justify-content: center;
        margin-top: 20px;
        padding: 0;
        list-style: none;
    }

        .slick-dots li button {
            font-size: 0; /* Ẩn số */
            width: 12px;
            height: 12px;
            background-color: #ccc;
            border-radius: 50%;
            border: none;
            margin: 0 5px;
            cursor: pointer;
        }

        .slick-dots li.slick-active button {
            background-color: #B08EAD;
        }

    .single_product_list {
        background-color: #fefefe;
        padding: 60px 0;
    }

        .single_product_list h1 {
            font-size: 2rem;
            color: #333;
        }

    .single_product_iner {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        padding: 30px 20px;
        margin-bottom: 40px;
        transition: transform 0.3s ease;
        min-height: 360px; /* ✅ Chiều cao tối thiểu để đồng đều */
        display: flex;
        align-items: center;
    }

        .single_product_iner:hover {
            transform: translateY(-5px);
        }

    .single_product_img {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }

        .single_product_img img:first-child {
            width: 100%;
            height: 230px; /* ✅ Chiều cao cố định */
            object-fit: cover; /* ✅ Ảnh không bị méo */
            border-radius: 10px;
            transition: transform 0.4s ease;
        }

        .single_product_img:hover img:first-child {
            transform: scale(1.05);
        }

    .product_overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.1;
        object-fit: cover;
        border-radius: 10px;
    }

    .single_product_content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

        .single_product_content h2 {
            font-size: 0.8rem;
            color: #222;
            margin-bottom: 15px;
        }

            .single_product_content h2 a {
                color: inherit;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .single_product_content h2 a:hover {
                    color: #B08EAD;
                }

    .btn_3 {
        display: inline-block;
        background-color: #B08EAD;
        color: #fff;
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 30px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .btn_3:hover {
            background-color: #a26c9b;
        }

    .row.gx-4 {
        row-gap: 30px;
    }

</style>

<!-- banner part start -->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <!-- Text section -->
            <div class="col-md-5">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h2 style="margin-left:20px">Chăn Gối 🛏️</h2>
                        <h2 style="margin-left:140px">🌿 Lá Dứa</h2>
                        <p style="margin-left:20px">
                            Chăm sóc giấc ngủ an toàn  <br />
