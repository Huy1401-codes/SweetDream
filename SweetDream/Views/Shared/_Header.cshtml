<header style="background: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <style>
        /* Reset và style container */
        .my-header-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Logo */
        .my-logo img {
            width: 200px;
            height: auto;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .my-logo img:hover {
                transform: scale(1.05);
            }

        /* Nav menu */
        .my-nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .my-nav > li {
                position: relative;
                margin-left: 30px;
                cursor: pointer;
                border-radius: 6px;
                transition: background-color 0.3s ease;
            }

                .my-nav > li > a {
                    text-decoration: none;
                    color: #444;
                    font-weight: 600;
                    padding: 10px 15px;
                    display: inline-block;
                    border-radius: 6px;
                    transition: background-color 0.3s ease, color 0.3s ease;
                }
                    /* Highlight current hovered nav item */
                    .my-nav > li:hover,
                    .my-nav > li > a:hover {
                        background-color: #007bff;
                        color: white !important;
                    }

                /* Dropdown arrow */
                .my-nav > li.has-dropdown > a::after {
                    content: " ▼";
                    font-size: 0.65em;
                    margin-left: 5px;
                    transition: transform 0.3s ease;
                }
                /* Arrow rotate on hover */
                .my-nav > li.has-dropdown:hover > a::after {
                    transform: rotate(180deg);
                }

        /* Dropdown menu */
        .my-dropdown {
            position: absolute;
            top: 52px; /* khoảng cách top dropdown */
            left: 0;
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            min-width: 190px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            display: none;
            flex-direction: column;
            z-index: 1000;
            padding: 8px 0;
            transition: opacity 0.3s ease;
        }

            .my-dropdown a {
                padding: 10px 20px;
                text-decoration: none;
                color: #444;
                display: block;
                white-space: nowrap;
                transition: background-color 0.25s ease;
                border-radius: 6px;
            }

                .my-dropdown a:hover {
                    background-color: #007bff;
                    color: white;
                }

        /* Hiện dropdown khi hover vào li cha */
        .my-nav > li.has-dropdown:hover .my-dropdown {
            display: flex;
        }

        /* Icon section */
        .my-icons {
            display: flex;
            align-items: center;
            gap: 25px;
            font-size: 20px;
            color: #444;
            user-select: none;
        }

            .my-icons a {
                text-decoration: none;
                color: inherit;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                .my-icons a:hover {
                    color: #007bff;
                }

        /* Search box styles */
        #search_box {
            display: none;
            background: #f9f9f9;
            padding: 10px 20px;
            border-top: 1px solid #ddd;
            transition: max-height 0.4s ease;
            overflow: hidden;
        }

            #search_box.active {
                display: block;
            }

            #search_box form {
                display: flex;
                max-width: 600px;
                margin: 0 auto;
            }

            #search_box input[type="text"] {
                flex: 1;
                padding: 8px 12px;
                border: 1px solid #ccc;
                border-radius: 4px 0 0 4px;
                font-size: 16px;
                outline: none;
            }

            #search_box button {
                padding: 8px 16px;
                border: 1px solid #007bff;
                background-color: #007bff;
                color: white;
                border-radius: 0 4px 4px 0;
                cursor: pointer;
                font-size: 16px;
                transition: background-color 0.3s ease;
                border-left: none;
            }

                #search_box button:hover {
                    background-color: #0056b3;
                }

        #search_close {
            cursor: pointer;
            font-size: 22px;
            color: #999;
            margin-left: 15px;
            user-select: none;
            transition: color 0.3s ease;
        }

            #search_close:hover {
                color: #007bff;
            }
    </style>

    <div class="my-header-container">
        <!-- Logo -->
        <div class="my-logo">
            <a href="/">
                <img src="~/img/logo123.png" alt="Logo" />
            </a>
        </div>

        <!-- Navigation menu -->
        <ul class="my-nav">
            <li><a href="/">Home</a></li>
           

            <li class="my-nav">
                <a href="/Home/Product">Product</a>
               
            </li>

            <li class="has-dropdown">
                <a href="#">Pages</a>
                <div class="my-dropdown">
                    <a href="checkout.html">Product Checkout</a>
                    <a href="cart.html">Shopping Cart</a>
                    <a href="confirmation.html">Confirmation</a>
                    <a href="elements.html">Elements</a>
                </div>
            </li>

            <li class="my-nav">
                <a href="/Authentication/Blogs">Blog</a>
                
            </li>

            <li><a href="/Authentication/Login">Login</a></li>
        </ul>

        <!-- Icons -->
        <div class="my-icons">
            <a href="javascript:void(0)" id="search_icon" title="Search">🔍</a>
            <a href="cart.html" title="Cart">🛒</a>
            <a href="profile.html" title="Profile">👤</a>
        </div>
        
    </div>
    <div id="search_box">
        <form action="#" method="get">
            <input type="text" placeholder="Search here..." name="q" />
            <button type="submit">Search</button>
            <span id="search_close" title="Close Search">×</span>
        </form>
    </div>
    <script>
        // Lấy element
        const searchIcon = document.getElementById('search_icon');
        const searchBox = document.getElementById('search_box');
        const searchClose = document.getElementById('search_close');

        // Bật hiện search box khi click icon search
        searchIcon.addEventListener('click', () => {
            searchBox.classList.add('active');
        });

        // Ẩn search box khi click dấu x
        searchClose.addEventListener('click', () => {
            searchBox.classList.remove('active');
        });
    </script>
</header>
